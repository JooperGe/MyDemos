<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ABCDEF" >

    <LinearLayout
        android:id="@+id/rlparent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv20_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tv20_test" />

        <Button
            android:id="@+id/btn20_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示网络图片【并缓存到本地(此处本地缓存只是去掉了后缀名而已)】" />

        <ImageView
            android:id="@+id/iv20_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#ff0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据库" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn20_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建数据库" />

            <Button
                android:id="@+id/btn20_db_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="增" />

            <Button
                android:id="@+id/btn20_db_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删" />

            <Button
                android:id="@+id/btn20_db_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="改" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn20_db_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查" />

            <Button
                android:id="@+id/btn20_db_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清空" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_latest_datas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="latest" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#ff0000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_id2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#ff0000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_database_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tv_database_update"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>